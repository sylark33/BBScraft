
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}
    <h2>YiCraftCore白名单</h2>
    <div class="form-horizontal">
        <h4>获取白名单最后一步</h4>
        <hr />
        <h3>必填基本信息</h3>
        <form method="post" action="/mail/Add">
            <div class="form-group">
                @Html.Label("请输入你的游戏ID", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("uid", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("请输入你的QQ邮箱:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("mail", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br>
            <hr>
            <br>
            <h3>实名注册</h3>
            <h4>你可以留空，但相应的，你将取消独立世界资格</h4>
            <h5>本站经ICP备案认证，经江西公安认证,已保证信息安全</h5>
            <div class="form-group">
                @Html.Label("请输入你的真实姓名", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("actualname", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("请输入你的身份证号码", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("idcard", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("请输入你的年龄", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.Editor("age", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <input type="submit" value="获取邮箱验证码" class="btn btn-default" />
        </form>
    </div>

