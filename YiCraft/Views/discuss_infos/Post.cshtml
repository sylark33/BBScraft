    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        #postDetail {
            padding: 0 16px;
        }

        .send-pad {
            height: 50px;
            margin-top: 36px;
        }

        .reply-page {
            text-align: right;
            margin: 16px 0;
        }

        .reply-content .post-title {
            background-color: #E5EDF2;
            height: 42px;
            line-height: 36px;
            font-size: 14px;
            border-bottom: 6px solid #C2D5E3;
        }

            .reply-content .post-title .left {
                width: 200px;
                float: left;
            }

        ul {
            list-style: none;
        }

        .content-item {
            border-bottom: 6px solid #C2D5E3;
        }

            .content-item .left {
                width: 200px;
                background-color: #E5EDF2;
                padding-bottom: 6px;
                float: left;
            }

                .content-item .left .user-no {
