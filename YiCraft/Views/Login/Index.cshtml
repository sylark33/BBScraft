
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
    Session["uid"] = "游客";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>大学生社交生活论坛</title>
    <link rel="stylesheet" href="~/Content/Logincss/login.css">

</head>
<body>
    <div class="login">
        <div class="login_title">
            <p><img src="~/img/Loginimg/jinghui.png" style="width:80px;height:80px;margin-right:30px;" />大学生社交生活论坛欢迎你</p>
        </div>

        <div class="login_main">

            <div class="main_left"></div>

            <div class="main_right">
                <div class="right_title">用户登录</div>
                <h3>@ViewBag.Error</h3>
                <form action="/Login/Login_end" method="post" class="form">

                    <div class="form1">
                        <img src="~/img/Loginimg/username.png" alt="">
                        <input type="text" name="name" placeholder="请输入用户名">
                    </div>

                    <div class="form1">
                        <img src="~/img/Loginimg/password.png" alt="">
                        <input type="password" name="pwd" placeholder="请输入密码">
                    </div>

                    <div class="btn1"><input type="submit" value="登录" /></div>

                    <a class="btn2" href="../question/qu_entrance"><input type="button" value="注册" /></a>

                    <center><p style="margin-top:20px;font-size:12px;color:#FA6F03;">登录遇到问题，请联系我们</p></center>
                </form>
            </div>
        </div>
        <div class="login_footer">
            <p>建议浏览器：Chrome、Microsoft Edge、Firefox、IE8及以上</p>
            <p>联系邮箱：lux3@qq.com </p>
        </div>
    </div>
</body>
</html>